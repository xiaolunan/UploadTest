<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mLl_package"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
        android:id="@+id/mBtn_jian"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/left_click_bg_selector"
        android:text="-" />

    <EditText
        android:id="@+id/mEdit_num"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/edit_bg_shape"
        android:focusable="false"
        android:gravity="center"
        android:text="0" />

    <Button
        android:id="@+id/mBtn_jia"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/right_click_bg_selector"
        android:text="+" />

</LinearLayout>